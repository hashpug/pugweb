@import '../../layouts/variables.styl';

.page-purchase
  color $color-text-deep
  .purchase-header
    display flex
    align-items center
    justify-content space-between
    .button
      height 4em
  .table
    thead
      td, th

  .purchases
    width 100%
    min-width 100%
    overflow scroll
    font-size 0.8em
    font-weight bold
    .purchases-header, .purchases-row
      text-align center
      display flex
      > div
        display flex
        padding 0.5em
        flex-grow 0
        flex-shrink 0
        align-items center
        justify-content center
      .date
        width 280px
        justify-content flex-start
        .date-check
          width 75px
        .date-content
          flex-grow 1
          display flex
          align-items center
          justify-content space-between
      .receipt
        width 120px
      .cashier
        width 100px
      .items
        width 320px
      .price
        width 140px
    .purchases-header
      > div
        background-color $color-grey-lite
        font-weight bold
      .date
        .date-content
          > div
            width 100%
            padding-right 2em
        .date-check
          p
            font-size 8px
    .purchases-row
      &:nth-child(2n+1)
        > div
          background-color $color-grey-lite
      > div
        border-right 1px solid $color-grey
        &:last-child
          border-right 0px solid $color-grey
      .date
        display flex
        justify-content space-between
        align-items center
        .date-open
          img
            width 1em
            vertical-align middle

  .purchase-pager
    display flex
    align-items center
    justify-content center
    font-weight bold
    margin-top 50px
    .pager-cell
      display flex
      width 2em
      height 1.5em
      align-items center
      justify-content center
      color $color-text-deep
      border 0px solid
      border-radius 0.5em
      margin 0 0.3em
      &:hover
        background-color $color-grey-lite
      &.static
        background-color transparent
        pointer-events none
      &.is-active
        background-color $color-primary
        color $color-primary-invert

